generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id               String             @id @default(uuid())
  createdAt        DateTime           @default(now())
  email            String             @unique
  name             String
  expenses         Expense[]
  RecurringExpense RecurringExpense[]
  Salary           Salary[]

  @@map("user")
}

model Expense {
  id          String   @id @default(uuid())
  createAt    DateTime @default(now())
  name        String?
  value       Decimal
  description String?
  typePayment TypePayment
  user        User     @relation(fields: [userId], references: [id])
  userId      String

  @@map("expense")
}

model Salary {
  id         String   @id @default(uuid())
  amount     Decimal
  PaymentDay DateTime
  user       User     @relation(fields: [userId], references: [id])
  userId     String

  @@map("salary")
}

model RecurringExpense {
  id                   String   @id @default(uuid())
  RecurringExpenseDate DateTime
  user                 User     @relation(fields: [userId], references: [id])
  userId               String

  @@map("recurring_expense")
}

enum TypePayment {
  credit
  debit
  cash
}